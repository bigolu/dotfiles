# rust
# compile, run, and remove the binary
function rust() {
    name=$(basename $1 .rs)
    rustc $@ && ./$name && rm $name
}

# zoxide
eval "$(zoxide init bash --cmd z)"
z() { __zoxide_z "$@" && ls; }

# automatically attach to tmux
if [ -z "$ATTACHED_TO_TMUX" ]; then
	ta &> /dev/null
	export ATTACHED_TO_TMUX=1
fi
