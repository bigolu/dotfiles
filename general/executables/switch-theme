#!/usr/bin/env bash

case $1 in

  "day")
    dconf write /org/gnome/shell/extensions/blur-my-shell/panel/color '(0.94901961088180542, 0.94901961088180542, 0.94901961088180542, 0.91666668653488159)'
    ;;

  "night")
    dconf write /org/gnome/shell/extensions/blur-my-shell/panel/color '(0.0, 0.0, 0.0, 0.5533333420753479)'
    ;;

  *)
    ;;
esac
