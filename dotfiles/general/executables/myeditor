#!/usr/bin/env fish

# If we're in TMUX and we're attached from a vscode terminal, use the same vscode instance we are in as our editor.
if test -n "$TMUX"
and test "$(tmux show-environment VSCODE_INJECTION)" != '-VSCODE_INJECTION'
    exec code --reuse-window --wait $argv
else
    exec nvim $argv
end
