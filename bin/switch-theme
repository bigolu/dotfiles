#!/bin/bash

mode=''

case $1 in

  "day")
    mode='day'
    ;;

  "night")
    mode='night'
    ;;

  *)
    echo 'invalid argument, use "day" or "night"'
    exit 1
    ;;
esac

# Change wallpaper
flatpak run org.gabmus.hydrapaper --cli ~/Pictures/Wallpapers/persona-5-"$mode"-wide.png ~/Pictures/Wallpapers/persona-5-"$mode"-tall.jpg --modes zoom zoom
