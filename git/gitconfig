[user]
  name = Biggie Emmanuel
  email = hi@bigo.lu
[core]
  editor = nvim
  pager = delta-with-fallback-to-less
[push]
  default = current
[alias]
  all = add -A
  p = pull
  p-sub = submodule update
  s = status
  ss = status --short
  c = commit
  a = add
  d = diff
  d-sub = diff --submodule=diff
  undo = checkout --
  some = add -u
  undocommit = reset "HEAD^"
  co = checkout
  ui = "!gitui"
  gui = "!env TMUX='' code --enable-features=UseOzonePlatform --ozone-platform=wayland ."
  l = log
[init]
  defaultBranch = master
[merge]
  conflictstyle = diff3
	tool = vscode
[mergetool "vscode"]
  cmd = env TMUX='' code --enable-features=UseOzonePlatform --ozone-platform=wayland --wait $MERGED
[diff]
  colorMoved = default
  tool = vscode
[difftool "vscode"]
  cmd = env TMUX='' code --enable-features=UseOzonePlatform --ozone-platform=wayland --wait --diff $LOCAL $REMOTE
[interactive]
  diffFilter = delta-with-fallback-to-less --color-only
[delta]
  navigate = true
  hyperlinks = true
  syntax-theme = base16-brighter
  tabs = 2
  blame-palette = 0 8 32
  file-decoration-style = "bright-white ul"
  file-style = "normal"
  hunk-header-decoration-style = "bright-white box"
  hunk-header-line-number-style = "normal"
  hunk-header-style = "line-number normal"
  minus-style = "syntax 17"
  minus-non-emph-style = "syntax 17"
  minus-emph-style = "syntax 25"
  plus-style = "syntax 18"
  plus-non-emph-style = "syntax 18"
  plus-emph-style = "syntax 26"
  zero-style = "syntax normal"
[color "diff"]
	oldMoved = normal 21
	newMoved = normal 22
